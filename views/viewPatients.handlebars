<br>
<div class="row">
   <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Patients going to surgery</div>
            <!-- Table -->
            <table class="table table-hover" id="table-surgery">                
                <tbody>
                    {{#each operativePatient}} 
                    <tr>
                        <td class="patient-button" data-toggle="modal" data-target=".bs-example-modal-sm2" id="{{this.id}}">
                            {{this.patient_name}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Consults
            </div>
            <!-- Table -->
            <table class="table table-hover" id="table-consults">               
                <tbody>
                    {{#each pendingPatient}} 
                    <tr>
                        <td class="patient-button" data-toggle="modal" data-target=".bs-example-modal-sm2" id="{{this.id}}">
                            {{this.patient_name}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

   <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Floor patients</div>
            <!-- Table -->
            <table class="table table-hover" id="table-floor">
                <tbody>
                    {{#each floorPatient}} 
                    <tr>
                        <td class="patient-button" data-toggle="modal" data-target=".bs-example-modal-sm2" id="{{this.id}}">
                            {{this.patient_name}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

    
<div class="modal fade bs-example-modal-sm2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Patient Information</h4>
        </div>    
    
        <div class="modal-body" id="patient-info-column">
            
            <div class="row">
                <div class="col-md-5">
                    <strong>PATIENT NAME</strong>
                    <input type="text" class="form-control no-border" id="table-name" value=""><br>

                    <span>MRN</span><br>
                    <input type="text" class="form-control no-border" id="table-MRN" value=""><br>          
                    
                    <span>Injury</span>
                    <input type="text" class="form-control no-border" id="table-injury" value=""><br>

                    <div class="form-group">
                        <label for="table-status">Patient status</label>
                        <select class="form-control" id="table-status" style="width:150px">
                            <option value="Pending">Pending</option>
                            <option value="Operative">Operative</option>
                            <option value="Seen">Seen</option>
                            <option value="Floor">Floor</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-7">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
                        <ol class="carousel-indicators">
                        </ol>
                        <div class="carousel-inner"></div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
            </div>
            <br>
            
            <span>HPI</span>
            <input type="text" class="form-control no-border" id="table-HPI" value=""><br>
            
            <span>Plan</span>
            <table class="table" id="table-plan"></table>
            
            <br>
            <span id="add-update-task-span"></span>
        </div>

        <div class="modal-footer">
            <div id="update-patient-button-div"></div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->